generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(uuid())
  name      String
  email     String    @unique
  password  String
  document  String
  phone     String
  createdAt DateTime  @default(now()) @map("created_at")
  Project   Project[]

  @@map("users")
}

model Project {
  id            String   @id @default(uuid())
  title         String
  description   String
  category      String
  location      String
  financialGoal Decimal  @map("financial_goal")
  deadline      DateTime
  status        String
  createdAt     DateTime @default(now()) @map("created_at")

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String @unique @map("user_id")

  @@map("projects")
}
